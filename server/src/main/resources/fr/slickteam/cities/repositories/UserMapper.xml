<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sivalabs.demo.mappers.UserMapper">

    <resultMap id="UserResultMap" type="User">
        <id column="id" property="id"/>
        <result column="id" property="id"/>
        <result column="login" property="login"/>
        <result column="email" property="email"/>
        <result column="encodedPassword" property="encodedPassword"/>
    </resultMap>


    <select id="findByUsername" resultMap="UserResultMap">
        select id, name, email from users WHERE login=#{username}
    </select>
    <select id="findByEmal" resultMap="UserResultMap">
        select id, name, email from users WHERE email=#{email}
    </select>

    <insert id="addNewUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into users(login,email, encodedPassword) values(#{name},#{email}, #{encodedPassword})
    </insert>
</mapper>